<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="ButtonStyle">
    <item name ="android:layout_width">200dp</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:layout_gravity">center</item>
    <item name ="android:background">#8cad35</item>
  </style>
  
  <style name ="messageStyle">
    <item name ="android:layout_width">match_parent</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:layout_gravity">center</item>
    <item name ="android:textSize">10dp</item>
    <item name ="android:textColor">#C0C0C0</item>
  </style>
  
  <style name ="labelStyle">
    <item name ="android:layout_width">match_parent</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:layout_marginLeft">20dp</item>
    <item name ="android:textSize">10dp</item>
  </style>
  
    <style name ="infoStyle">
      <item name ="android:layout_width">match_parent</item>
      <item name ="android:layout_height">wrap_content</item>
      <item name ="android:gravity">center</item>
      <item name ="android:textSize">30dp</item>
      <item name ="android:layout_marginLeft">20dp</item>
    </style>

  <style name ="infoItemStyle">
    <item name ="android:layout_width">match_parent</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:gravity">center</item>
  </style>
    
  <style name ="itemImageStyle">
    <item name ="android:layout_width">40dp</item>
    <item name ="android:layout_height">40dp</item>
    <item name ="android:layout_marginLeft">10dp</item>
    <item name ="android:layout_marginRight">10dp</item>
    <item name ="android:layout_gravity">center</item>
  </style>
  
  <style name ="editCretentioalStyle">
    <item name ="android:layout_width">200dp</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:layout_gravity">center</item>
  </style>

  <color name="custom_theme_color">#b0b0ff</color>
  <style name="maintheme" parent="android:Theme.Light">
  </style>
</resources>