<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="ButtonStyle">
    <item name ="android:layout_width">200dp</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:layout_gravity">center</item>
    <item name ="android:background">#8cad35</item>
  </style>

  <style name ="messageStyle">
    <item name ="android:layout_width">match_parent</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:gravity">center</item>
    <item name ="android:textSize">10dp</item>
    <item name ="android:layout_marginTop">5dp</item>
    <item name ="android:layout_marginBottom">5dp</item>
    <item name ="android:textColor">#C0C0C0</item>
  </style>
  
  <style name ="loadStyle">
    <item name ="android:layout_width">match_parent</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:gravity">center</item>
    <item name ="android:textSize">20dp</item>
    <item name ="android:layout_marginTop">15dp</item>
    <item name ="android:layout_marginBottom">15dp</item>
    <item name ="android:textColor">#DEDD22</item>
  </style>
  
  <style name ="labelStyle">
    <item name ="android:layout_width">match_parent</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:layout_marginLeft">20dp</item>
    <item name ="android:textSize">10dp</item>
  </style>
  
    <style name ="infoStyle">
      <item name ="android:layout_width">match_parent</item>
      <item name ="android:layout_height">wrap_content</item>
      <item name ="android:gravity">center</item>
      <item name ="android:textSize">30dp</item>
      <item name ="android:layout_marginLeft">20dp</item>
    </style>

  <style name ="infoItemStyle">
    <item name ="android:layout_width">match_parent</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:gravity">center</item>
  </style>
    
  <style name ="itemImageStyle">
    <item name ="android:layout_width">40dp</item>
    <item name ="android:layout_height">40dp</item>
    <item name ="android:layout_marginLeft">10dp</item>
    <item name ="android:layout_marginRight">10dp</item>
    <item name ="android:layout_gravity">center</item>
    <item name ="android:layout_centerVertical">true</item>
  </style>
  
  <style name ="editCretentioalStyle">
    <item name ="android:layout_width">200dp</item>
    <item name ="android:layout_height">wrap_content</item>
    <item name ="android:layout_gravity">center</item>
  </style>

  <style name="DatePickerButtonStyle">
    <item name ="android:textSize">7dp</item>
    <item name ="android:layout_width">50dp</item>
    <item name ="android:layout_height">50dp</item>
    <item name ="android:drawableLeft">@drawable/calendarIcon</item>
  </style>

  <style name="DateStyle">
    <item name ="android:layout_marginLeft">50dp</item>
     <item name ="android:layout_width">200dp</item>
     <item name ="android:layout_height">wrap_content</item>
     <item name ="android:textSize">15dp</item>
    <item name ="android:layout_gravity">center</item>
  </style>

  <style name="AppTheme" parent="android:Theme.Material.Light">
    <!-- Main theme colors -->
    <!--   your app branding color for the app bar -->
    <item name="android:colorPrimary">@color/primary</item>
    <!--   darker variant for the status bar and contextual app bars -->
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:textColor">#440088</item>
  </style>
</resources>